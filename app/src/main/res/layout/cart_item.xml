<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin">

    <CheckBox android:id="@+id/cart_item_checker"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_vertical"
              android:layout_centerVertical="true"
              android:layout_alignParentStart="true"
              android:focusable="false"
              android:clickable="false"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cart_item_checker"
                    android:layout_marginStart="8sp"
                    android:focusable="false">

        <TextView android:id="@+id/cart_item_name"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:textSize="22sp"
                  android:text="Corn"/>

        <TextView android:id="@+id/cart_item_description"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/cart_item_name"
                  android:scrollHorizontally="true"
                  android:ellipsize="end"
                  android:maxLines="2"
                  android:text="its for eating. Lorem ipsum asdasdadas dasdasdasdasdasdasd asdasdasdadsa sdasdasdasda"/>

        <TextView android:id="@+id/cart_item_quantity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignRight="@id/cart_item_name"
                  android:textDirection="anyRtl"
                  android:textSize="17sp"
                  android:text="50"/>
    </RelativeLayout>


</RelativeLayout>